<h1>PRODUCTS MENU</h1>
<%unless params[:mess].nil?%><div id="flash"><%=params[:mess]%></div><%end%>
<table cellpadding="10" border="2px" cellspacing="1">
  <tr><th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><div style="border:1px solid;height:30px;width:30px;"></div></td>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= User.find(product.user_id).name %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
<%= link_to 'Show Orders',:controller=>'orders',:action=>"orders_list" %>
